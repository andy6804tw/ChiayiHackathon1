<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/weather"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/round_box"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/tv_wind"
        android:textColor="#fff"

        android:textSize="20sp" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/tv_condition"
        android:layout_alignStart="@+id/tv_condition"
        android:layout_below="@+id/tv_condition"
        android:background="#fff" />

    <com.github.ahmadnemati.wind.WindView
        android:id="@+id/windView"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        app:barometerTickSpacing="9dp"
        app:bigPoleX="38dp"
        app:labelFontSize="12sp"
        app:numericFontSize="25sp"
        app:poleBottomY="98dp"
        app:pressureLineY="73dp"
        app:pressureTextX="12dp"
        app:pressureTextY="4dp"
        app:smallPoleX="75dp"
        app:windTextX="10dp"
        app:windTextY="29dp" />

</LinearLayout>